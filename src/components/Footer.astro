---
import { Image } from "astro:assets";
import logoImage from "../assets/logo-fullcolor-white-tag.png";
---

<footer>
  <iframe
    src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3258.5532326854427!2d-80.87968724845699!3d35.242490061417726!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8856a1eaba17e7c3%3A0x798145751b05c264!2s2910+Parkway+Ave%2C+Charlotte%2C+NC+28208!5e0!3m2!1sen!2sus!4v1539012587668"
    width="100%"
    height="300"
    style="border:0"
    allowfullscreen=""></iframe>
  <div class="bg-accent text-accent-foreground/80 py-8">
    <div class="container mx-auto px-4 grid grid-cols-1 md:grid-cols-12 gap-8">
      {/* Left column (logo + contact info) */}
      <div class="md:col-span-5 space-y-4 text-center md:text-left">
        <a href="/" class="inline-block">
          <Image
            format="png"
            src={logoImage}
            alt="QC Family Tree"
            width={64}
            height={64}
          />
        </a>
        <div>
          <a href="tel:7043922346" class="block hover:text-accent-foreground"
            >704-392-2346</a
          >
          <a
            href="mailto:greg@qcfamilytree.org"
            class="block hover:text-accent-foreground">Email Us</a
          >
          <a
            href="https://goo.gl/maps/jr6zh85UM9G2"
            target="_blank"
            rel="noopener noreferrer"
            class="block hover:text-accent-foreground"
          >
            2910 Parkway Avenue<br />
            Charlotte, North Carolina 28208
