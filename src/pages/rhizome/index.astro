---
import Layout from "@/layouts/Layout.astro";
import { Image } from "astro:assets";
import Header from "@/components/Header.astro";
import { CustomTooltip } from "@/components/ui/tooltip";
import { RhizomeFAQ } from "@/components/ui/accordion";
import headerImage from "@/assets/rhizome/header.jpg";
import PhotoCarousel from "@/components/photo-carousel";
import { Link } from "@/components/ui/link";

import slide_1 from "@/assets/rhizome/slide_1.jpg";
import slide_2 from "@/assets/rhizome/slide_2.jpg";
import slide_3 from "@/assets/rhizome/slide_3.jpg";
import slide_4 from "@/assets/rhizome/slide_4.jpg";
---

<Layout
  description="We are a group of aligned artists and cultural workers who design, present and promote art experiences and creations for the purpose of supporting the work of member artists, and providing benefit to the communities we serve."
  slug="/rhizome"
  title="Rhizome Coalition"
>
  <div class="pb-16 px-4">
    <Header
      title="Rhizome Coalition"
      tagline="Artists united for community and creativity."
      image={headerImage.src}
    />
  </div>
  <section
    id="about"
    class="bg-accent lg:p-16 md:p-8 p-4 text-neutral-100 space-y-4"
  >
    <div
      class="dark bg-accent-foreground-hover border border-secondary-dark p-8 rounded-xl space-y-4 w-full"
    >
      <div
        class="max-w-[932px] mx-auto flex justify-center gap-6 flex-wrap-reverse"
      >
        <div class="px-6 w-full">
          <PhotoCarousel
            images={[
              {
                src: slide_1.src,
                alt: "People gathered around park listening to speaker",
              },
              {
                src: slide_2.src,
                alt: "3 people in front of mural painting",
              },
              {
                src: slide_3.src,
                alt: "People gathered at park listening to speakder with flowers in front of them",
              },
              {
                src: slide_4.src,
                alt: "People sitting at table during meeting with art supplies on counter",
              },
            ]}
            client:load
          />
        </div>
        <div class="space-y-3">
          <h2 class="sm:text-3xl text-xl font-bold font-ubuntu">
            What is the
            <CustomTooltip
              content="Specialized underground stems that have nodes and internodes from which NEW ROOTS emerge."
              label="Rhizome"
              underlineLabel
              client:media="(min-width: 40rem)"
            />
            Coalition?
          </h2>
          <p class="leading-7">
            We are a group of aligned artists and cultural workers who design,
            present and promote art experiences and creations for the purpose of
            supporting the work of member artists, and providing benefit to the
            communities we serve. We stand for fairness, justice, and equality,
            and we work to end all types of oppression everywhere. QCFT Rhizome
            members meet regularly to share our art, learn from each other, and
            build a strong support system for our work and our collective
            progress.
          </p>
          <div class="flex gap-4 w-full md:flex-row flex-col">
            <!-- <Link
              size="sm"
              className="rounded-xl w-full md:max-w-xs"
              href="/rhizome/signup">Sign up</Link
            > -->
            <Link
              size="sm"
              className="rounded-xl md:max-w-xs w-full"
              href="#faqs">View FAQs</Link
            >
          </div>
        </div>
      </div>
    </div>
  </section>
  <section id="benefits" class="max-w-[932px] mx-auto py-16 px-4">
    <h2 class="sm:text-3xl text-xl font-semibold mb-6 font-ubuntu">
      Membership Benefits
    </h2>
    <ul class="space-y-4">
      <li class="flex items-start gap-3">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="lucide lucide-users-icon lucide-users"
          ><path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"></path><path
            d="M16 3.128a4 4 0 0 1 0 7.744"></path><path
            d="M22 21v-2a4 4 0 0 0-3-3.87"></path><circle cx="9" cy="7" r="4"
          ></circle></svg
        >
        <span>Be a member of a supportive group of artists.</span>
      </li>

      <li class="flex items-start gap-3">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="lucide lucide-sunrise-icon lucide-sunrise"
          ><path d="M12 2v8"></path><path d="m4.93 10.93 1.41 1.41"></path><path
            d="M2 18h2"></path><path d="M20 18h2"></path><path
            d="m19.07 10.93-1.41 1.41"></path><path d="M22 22H2"></path><path
            d="m8 6 4-4 4 4"></path><path d="M16 18a4 4 0 0 0-8 0"></path></svg
        >
        <span>1 half day retreat</span>
      </li>

      <li class="flex items-start gap-3">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="lucide lucide-ticket-icon lucide-ticket"
          ><path
            d="M2 9a3 3 0 0 1 0 6v2a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2v-2a3 3 0 0 1 0-6V7a2 2 0 0 0-2-2H4a2 2 0 0 0-2 2Z"
          ></path><path d="M13 5v2"></path><path d="M13 17v2"></path><path
            d="M13 11v2"></path></svg
        >
        <span>Special invitations to events.</span>
      </li>

      <li class="flex items-start gap-3">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="lucide lucide-percent-icon lucide-percent"
          ><line x1="19" x2="5" y1="5" y2="19"></line><circle
            cx="6.5"
            cy="6.5"
            r="2.5"></circle><circle cx="17.5" cy="17.5" r="2.5"></circle></svg
        >
        <span>Exclusive discounts on events.</span>
      </li>

      <li class="flex items-start gap-3">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="lucide lucide-share2-icon lucide-share-2"
          ><circle cx="18" cy="5" r="3"></circle><circle cx="6" cy="12" r="3"
          ></circle><circle cx="18" cy="19" r="3"></circle><line
            x1="8.59"
            x2="15.42"
            y1="13.51"
            y2="17.49"></line><line x1="15.41" x2="8.59" y1="6.51" y2="10.49"
          ></line></svg
        >
        <span>Skill share opportunities with fellow artists.</span>
      </li>

      <li class="flex items-start gap-3">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="lucide lucide-megaphone-icon lucide-megaphone"
          ><path
            d="M11 6a13 13 0 0 0 8.4-2.8A1 1 0 0 1 21 4v12a1 1 0 0 1-1.6.8A13 13 0 0 0 11 14H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2z"
          ></path><path
            d="M6 14a12 12 0 0 0 2.4 7.2 2 2 0 0 0 3.2-2.4A8 8 0 0 1 10 14"
          ></path><path d="M8 6v8"></path></svg
        >
        <span>Artist-specific news and offers.</span>
      </li>

      <li class="flex items-start gap-3">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="lucide lucide-file-text-icon lucide-file-text"
          ><path d="M15 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7Z"
          ></path><path d="M14 2v4a2 2 0 0 0 2 2h4"></path><path d="M10 9H8"
          ></path><path d="M16 13H8"></path><path d="M16 17H8"></path></svg
        >
        <span>Grant writing and portfolio development.</span>
      </li>

      <li class="flex items-start gap-3">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="lucide lucide-briefcase-icon lucide-briefcase"
          ><path d="M16 20V4a2 2 0 0 0-2-2h-4a2 2 0 0 0-2 2v16"></path><rect
            width="20"
            height="14"
            x="2"
            y="6"
            rx="2"></rect></svg
        >
        <span>
          Prioritization for contract work, when it becomes available.
          <br />
          <small class="text-neutral-400">
            (*Meeting attendance and coalition involvement influence contract
            work offers.)
          </small>
        </span>
      </li>

      <li class="flex items-start gap-3">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="lucide lucide-paintbrush-icon lucide-paintbrush"
          ><path d="m14.622 17.897-10.68-2.913"></path><path
            d="M18.376 2.622a1 1 0 1 1 3.002 3.002L17.36 9.643a.5.5 0 0 0 0 .707l.944.944a2.41 2.41 0 0 1 0 3.408l-.944.944a.5.5 0 0 1-.707 0L8.354 7.348a.5.5 0 0 1 0-.707l.944-.944a2.41 2.41 0 0 1 3.408 0l.944.944a.5.5 0 0 0 .707 0z"
          ></path><path
            d="M9 8c-1.804 2.71-3.97 3.46-6.583 3.948a.507.507 0 0 0-.302.819l7.32 8.883a1 1 0 0 0 1.185.204C12.735 20.405 16 16.792 16 15"
          ></path></svg
        >
        <span
          >Exclusive access to apply to be in a mural artist entrepreneur
          cohort.</span
        >
      </li>

      <li class="flex items-start gap-3">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="lucide lucide-bus-icon lucide-bus"
          ><path d="M8 6v6"></path><path d="M15 6v6"></path><path d="M2 12h19.6"
          ></path><path
            d="M18 18h3s.5-1.7.8-2.8c.1-.4.2-.8.2-1.2 0-.4-.1-.8-.2-1.2l-1.4-5C20.1 6.8 19.1 6 18 6H4a2 2 0 0 0-2 2v10h3"
          ></path><circle cx="7" cy="18" r="2"></circle><path d="M9 18h5"
          ></path><circle cx="16" cy="18" r="2"></circle></svg
        >
        <span>Alternate ROOTS week group trip coordination.</span>
      </li>

      <li class="flex items-start gap-3">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="lucide lucide-store-icon lucide-store w-7 h-7"
          ><path d="M15 21v-5a1 1 0 0 0-1-1h-4a1 1 0 0 0-1 1v5"></path><path
            d="M17.774 10.31a1.12 1.12 0 0 0-1.549 0 2.5 2.5 0 0 1-3.451 0 1.12 1.12 0 0 0-1.548 0 2.5 2.5 0 0 1-3.452 0 1.12 1.12 0 0 0-1.549 0 2.5 2.5 0 0 1-3.77-3.248l2.889-4.184A2 2 0 0 1 7 2h10a2 2 0 0 1 1.653.873l2.895 4.192a2.5 2.5 0 0 1-3.774 3.244"
          ></path><path d="M4 10.95V19a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2v-8.05"
          ></path></svg
        >
        <span>
          Be a part of the new project to support businesses in
          Freedom-Wilkinson Corridor:
          <strong>Here for Good Business Cooperative</strong>.
        </span>
      </li>
    </ul>
  </section>
  <section id="faqs" class="bg-secondary py-16 px-4 text-white w-full">
    <div class="max-w-[932px] mx-auto">
      <h2 class="sm:text-3xl text-xl font-semibold font-ubuntu">FAQs</h2>
      <RhizomeFAQ client:load />
    </div>
  </section>
</Layout>
